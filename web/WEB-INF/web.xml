<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>GetXml</servlet-name>
        <servlet-class>servlet.ExportXml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetXml</servlet-name>
        <url-pattern>getxml.xml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SetXml</servlet-name>
        <servlet-class>servlet.ImportXml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetXml</servlet-name>
        <url-pattern>setxml.xml</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>AppSessionListener</listener-class>
    </listener>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error_page.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
</web-app>